<section class="status">
	<div class="container mx-auto px-6">
		<div class="status-box w-full lg:w-2/3 mx-auto">
			<div class="flex items-center justify-between mb-12">
				<h1 class="text-xl font-bold">Track Order</h1>
				<h6 class="bg-white py-1 rounded-full px-4 text-green-600 text-xs"> <span class="font-bold">ORDER ID :</span> <%=order.orderId%></h6>
				<input id="hiddenInput" type="hidden" value="<%= JSON.stringify(order)%>">
			</div>
			<ul>
				<li class="status_line md:text-xl text-sm  pb-16" data-status="order_placed"><span>Order Placed</span></li>
				<li class="status_line md:text-xl text-sm pb-16" data-status="confirmed"><span>Order Confirmed</span></li>
				<li class="status_line md:text-xl text-sm pb-16" data-status="prepared"><span>Preparation</span></li>
				<li class="status_line md:text-xl text-sm pb-16" data-status="delivered"><span>Out for delivery</span></li>
				<li class="status_line md:text-xl text-sm" data-status="completed"><span>Complete</span></li>
			</ul>
		</div>
	</div>
</section>